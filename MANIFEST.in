# Include essential files
include README.md
include LICENSE
include pyproject.toml

# Include the main package
recursive-include nnterp *.py

# Include the status file
exclude data/*.json
exclude data/*.json.lock

# Exclude unwanted files and directories
exclude test.ipynb
exclude demo.ipynb
exclude deploy.py
exclude CLAUDE.md
exclude demo.py
exclude .pre-commit-config.yaml
exclude .gitignore
exclude uv.lock

# Include tests directory
recursive-include tests *.py

# Exclude directories
prune docs
prune .github
prune .pytest_cache
prune *.egg-info
prune __pycache__
prune .venv
prune .git 